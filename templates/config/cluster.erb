
cluster <%= @cluster_name %>
<% if @forward_proto == "file" -%>
  <%= @forward_proto %> <%= @file %>
  ;
<% elsif @forward_proto == "forward" -%>
  <%- if @channel == "carbon_ch" -%>
  <%= @forward_proto %> <%= @channel %>
  <%- else -%>
    <%= @forward_proto %> <%= @channel %><% if @replication_factor.to_i > 1 -%>replication <%= @replication_factor %><% end %>
  <%- end -%>
  <% @hosts.each do | host | -%>
  <%= host['host'] %>:<%= host['port'] %><%if host['alias'] %>=<%= host['alias'] %><% end %><% if host['proto'] %> <%= host['proto'] %><% end %>
  <% end -%>
;
<%- end -%>
